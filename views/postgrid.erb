
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h4>Recently added posts</h4>
            </div>
        </div>
        <div class="row">
        <% @posts.each do |post| %>
        
            <div class="col s12 m6 l4">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <a href="post/<%=post.id %>" class="post-image" style="background-image: url(<%=post.picture %>)">
                            
                            <span class="card-title"><%= post.title %></span>
                        </a>
                    </div>
                </div>
            </div>
        
        <% end %>
        </div>
    

    </div>