<div class="container">
    <div class="row">
        <div class="col s12"><h3> <%= @post.title %> </h3></div>
        <div class="col s12"><h5> <%= @post.subtitle %> </h5></div>
        <div class="col s12 m9">
            <div class="row">
            <div class="col s12"><img id="post-image" src="<%= @post.picture %>"></div>
            <div class="col s12"><article> <%= @post.postbody %> </article></div>
            <div class="col s12"><p> By <%= @author.screen_name %> </p></div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="row">
            <div class="col s12"><h6>More posts by <%= @author.screen_name %></h6></div>
            <div class="col s12">
                <% @moreposts.each do |post| %>
                    <div class="card">
                        <div class="card-image waves-effect waves-block waves-light">
                            <a href="<%=post.id %>">
                                <img src="<%=post.picture %>">
                                <span class="card-title"><%= post.title %></span>
                            </a>
                        </div>
                    </div>    
                <% end %>
            </div>
            <div class="col s12"><a href="/posts/<%= @author.screen_name %>">See All</a></div>
            </div>
        </div>
    </div>
</div>
