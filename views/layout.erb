<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/postgrid.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Neuton" rel="stylesheet">
    <title>Ice Spice</title>
</head>
<body>
    <div class="header">
        <nav class="nav-extended">
            <div class="nav-wrapper" id="top-header">
                <a href="/posts" class="brand-logo center" id="blog-name">Ice Spice Blog</a>         
            </div>
        </nav>
    </div>

    <ul id="slide-out" class="sidenav">
        <% if logged_in? %>
            <li><a href="/profile"><i class="fa  fa-user-circle  fa-2x"></i>Profile</a></li>
            <li><a href="/post/new"><i class="fa  fa-wrench  fa-2x"></i>Create Post</a></li>
            <li><a href="/logout"><i class="fa  fa-paper-plane  fa-2x"></i>Log Out</a></li>
        <% else %>
            <li><a class="modal-trigger" href="#login"><i class="fa  fa-wrench  fa-2x"></i>Log In</a></li>
        <% end %>
    </ul>


    <a href="#" data-target="slide-out" class="sidenav-trigger" id="burger"><i class="fa fa-bars"></i></a>
    <div class="side-nav-button"></div>
    
    <!-- Login Form -->
<div class="row modal grey lighten-2" id="login">
    <div class="modal-content center">
        <div class="">
            <div class="card-content white-text">
                <span class="card-title">Log into your account to be able to post!</span>
                <div class="row">
                    <form class="col s12" method="POST" action="/user/login">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="email" type="email" class="validate" name="email">
                                <label for="email">Email</label></div>
                            <div class="input-field col s6">
                                <input id="password" type="password" class="validate" name="password">
                                <label for="password">Password</label></div>
                        </div>
                        <button class="btn waves-effect waves-light grey" type="submit" id="submit-login">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



    <div id="main">
        <%= yield %>
    </div>


    <footer class="page-footer blue-grey lighten-2">
    <div class="footer-copyright blue-grey lighten-2">
